
#include <iostream>
#include "Customer.h"




Customer::Customer(int id, const string &name, int locationDistance, int maxOrders): this.id(id), this.name(name),
         this.locationDistance(locationDistance), this.maxOrders(maxOrders){
            this.ordersId() ; // האם ככה מאתחלים וקטור ריק? 
}

const string Customer::&getName() const{
    return this.name;   // עמוד 26 סיכום 
}

int Customer::getId() const{
    return this.id;
}

int Customer::getCustomerDistance() const{
    return this.locationDistance;
}

int Customer::getMaxOrders() const{
    return this.maxOrders;
} //Returns maxOrders

int Customer::getNumOrders() const{
    return this.ordersId.size();
} //Returns num of orders the customer has made so far

bool Customer::canMakeOrder() const{
    return this.ordersId.size() < this.maxOrders;
} //Returns true if the customer didn't reach max orders

const vector<int> Customer::&getOrdersIds() const{
    return &this.ordersId; //ללא בסימן האם אני מחזיר פה BY VALUE ?  

}

int Customer::addOrder(int orderId){
    if (this.ordersId.size() < this.maxOrders){
        this.ordersId.push_back(orderId);
        return orderId;
    }
    return -1;

} //return OrderId if order was added successfully, -1 otherwise



